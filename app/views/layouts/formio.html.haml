!!!
%html{ lang: "en" }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=UTF-8" }
    = render_view_hook "head"
    -# using resource links recommended by form.io representative
    = stylesheet_link_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", media: "all"
    - formio_version = ENV.fetch("FORMIO_VERSION", "4.13.8")
    = stylesheet_link_tag "https://cdn.form.io/formiojs/#{formio_version}/formio.full.min.css", media: "all"
    = javascript_include_tag "https://cdn.form.io/formiojs/#{formio_version}/formio.full.min.js"
    = javascript_include_tag "jquery"
    = javascript_include_tag "jquery_ujs"
    = javascript_include_tag "form_io_submission"
    = csrf_meta_tag

    :css
      #formio {
        margin: 2em auto;
        max-width: 960px;
      }

  %body
    / Prevent dragged files from being opened, so that Form.IOâ€™s file component can accept drag & drop
    #formio{ "ondragover" => "event.preventDefault();" }
    = yield
