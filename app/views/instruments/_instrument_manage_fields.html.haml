= f.input :show_details, label: t("instruments.instrument_fields.show_details")

= f.input :schedule, input_html: { value: @product.schedule.display_name }, hint: false

= f.input :problems_resolvable_by_user, as: :boolean, hint: false

- daily_booking = @product.daily_booking?

= f.input :pricing_mode

- if daily_booking
  = f.input :start_time_disabled
  = f.input :min_reserve_days, value_method: :to_i, default_value: "None"
  = f.input :max_reserve_days, value_method: :to_i, default_value: "None"
- else
  = f.input :reserve_interval, value_method: :to_i, label: "Reservation Interval"
  = f.input :min_reserve_mins, value_method: :to_i
  = f.input :max_reserve_mins, default_value: "None"
= f.input :min_cancel_hours, value_method: :to_i
= f.input :auto_cancel_mins, value_method: :to_i
= f.input :lock_window, value_method: :to_i, default_value: 0
= f.input :cutoff_hours, value_method: :to_i, default_value: 0
